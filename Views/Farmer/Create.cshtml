@using ProgPoe_MVC_AgriEnergyConnect.ViewModels
@model CreateFarmerViewModel

@* Display all model errors *@
<div class="validation-summary-errors">
    <ul>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <li>@error.ErrorMessage</li>
        }
    </ul>
</div>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="Type farmer first name">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Type farmer lastname">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Type cell number">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    <div class="form-group">
        <label asp-for="Location">Address</label>
        <input asp-for="Location" class="form-control" placeholder="Type farm address">
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="Type city name">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="Province">Province</label>
        <input asp-for="Province" class="form-control" placeholder="Type province name">
        <span asp-validation-for="Province" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProfileImage">Upload Image</label>
            <input asp-for="ProfileImage" type="file" class="form-control" placeholder="Choose Image">
            <span asp-validation-for="ProfileImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
